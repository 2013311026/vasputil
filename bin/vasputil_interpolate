"""Wrapper around vasputil interpolate.

Create a number of evenly spaced interpolated images between start
and end images.

"""

import os
from optparse import OptionParser

usage = """%prog POSCAR.start POSCAR.end N

The result is N files called POSCAR.{1-N} which are linearly interpolated
between POSCAR.start and POSCAR.end.
"""
parser = OptionParser(usage)
(options, args) = parser.parse_args()

ps = args[0]
pe = args[1]
ni = int(args[2]) + 1

for i in range(1, ni):
    s = "vasputil interpolate " + ps + " " + pe + " " + str(float(i)/ni) + \
            " POSCAR." + str(i)
    os.system(s)

#!/bin/sh

# Example driver script for planetolayer.

a=1.815

contcar=$1

# First layer
vasputil plane2layer $contcar 1 24 59 $a 0.5 $a

# second
h=$(echo $a\*2 |bc)
vasputil plane2layer $contcar 3 4 61 $h 0.5 $a

#third
h=$(echo $a\*3 |bc)
vasputil plane2layer $contcar 6 5 63 $h 0.5 $a

#fourth
h=$(echo $a\*4 |bc)
vasputil plane2layer $contcar 7 29 54 $h 0.5 $a

#fifth
h=$(echo $a\*5 |bc)
vasputil plane2layer $contcar 9 32 67 $h 0.5 $a
vasputil plane2layer $contcar 9 32 67 $h 0.7 $a

